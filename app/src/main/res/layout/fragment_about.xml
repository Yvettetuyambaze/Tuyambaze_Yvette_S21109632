<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About the Weather App"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/about_description"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="The app supports the following locations:"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/locationGlasgowr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="🏴󠁧󠁢󠁳󠁣󠁴󠁿 Glasgow"
        android:textColor="@color/white"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/locationLondond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="🏴󠁧󠁢󠁥󠁮󠁧󠁿 London"
        android:textColor="@color/white"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/NewYork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="🗽 New York"
        android:textColor="@color/white"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/Oman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="🇴🇲 Oman"
        android:textColor="@color/white"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/Mauritius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="🇲🇺 Mauritius"
        android:textColor="@color/white"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:id="@+id/Bangladesh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="🇧🇩 Bangladesh"
        android:textColor="@color/white"
        android:textAppearance="?attr/textAppearanceBody1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/about_features"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/about_data_source"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/about_updates"
        android:textColor="@android:color/white" />

</LinearLayout>